def get_day_names(day)
    day_name=""
    case day
    when "mon"
        day_name="Monday"
    when "tue"
        day_name="Tuesday"
    when "wed"
        day_name="wednesday"
    when "thurs"
        day_name="Thursday"
    when "fri"
        day_name="Friday"
    when "sat"
        day_name="Saturday"
    when "sun"
        day_name="Sunday"
    else
        day_name="Invalid abreviation"
    end
    return day_name
end
input_day=gets.chomp.downcase
puts get_day_names(input_day)
